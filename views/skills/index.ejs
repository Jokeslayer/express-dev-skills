<%- include('../partials/header') %>

    <body>
        <h1>My Many Talents</h1>
        <ul id="container">
            <% skills.forEach(function(s) { %>
                <li>
                    <form action="/skills/<%= s.id %>?_method=DELETE" method="POST" class="delete-form">
                        <button type="submit">X</button>
                    </form>
                    <a class="list" href="/skills/<%= s.id %>">
                        <%= s.skill %>
                    </a>
                </li>
                <% }); %>
        </ul>
        <button><a href="/skills/new">Add more awesome stuff</a></button>
        <%- include('../partials/footer') %>